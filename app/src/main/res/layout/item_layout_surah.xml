<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Diamond Shape with Number -->
        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp">

            <!-- Rotated background -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/diamond_shape"
                android:rotation="45" />

            <!-- Text stays normal -->
            <TextView
                android:id="@+id/tvSurahNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="1"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </FrameLayout>

        <!-- Surah Info (Name + Subtitle) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="15dp">

            <TextView
                android:id="@+id/tvSurahName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Al-Fatihah"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/primaryText" />

            <TextView
                android:id="@+id/tvSurahDsc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Opener"
                android:textColor="#26A69A"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Arabic Name & Ayahs -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/tvArabicName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الفاتحة"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/primaryText" />

            <TextView
                android:id="@+id/tvAyahCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7 Ayahs"
                android:textSize="14sp"
                android:textColor="#26A69A" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
